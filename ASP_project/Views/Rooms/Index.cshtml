@model IEnumerable<ASP_project.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent_Per_Day)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rent_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Room_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room_Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rent_Per_Day)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room_Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rent_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room_Note)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Room_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Room_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Room_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<ASP_project.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Name)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Employee_PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_IdCardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Name)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.Employee_PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_IdCardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Note)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Employee_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Employee_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Employee_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
